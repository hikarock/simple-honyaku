{
  "name": "シンプル翻訳",
  "version": "1.0",
  "manifest_version": 2,
  "description": "英和/和英の翻訳機能と辞書、英語読み上げ機能がついたシンプルな翻訳アプリです。",
  "icons": {
    "16": "img/icon16.png",
    "32": "img/icon32.png",
    "48": "img/icon48.png"
  },
  "background": {
    "page": "background.html"
  },
  "browser_action": {
    "default_icon": "img/icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*",
    "http://public.dejizo.jp/",
    "http://api.microsofttranslator.com/V2/Ajax.svc/Translate"
  ]
}
